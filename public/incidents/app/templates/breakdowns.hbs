<div class="medium-3 columns side-color">
    {{#link-to 'breakdowns.index'}}
        <img src="aee-incidents.png" alt="" class="bottom-padding">
    {{/link-to}}
    <div class="medium-12 columns">
        <ul class="side-nav side-color">
            {{#each data in controller}}
                <li class="breakdown-list">
                    <a {{action 'highlightMap' data.Pueblo}} class="breakdown-list">
                        {{data.Pueblo}}
                            <span class="aee-yellow label right">
                                {{[data.Cantidad de averias]}}
                            </span>
                    </a>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="medium-9 columns" id="map-show">
    <script charset="utf-8" type="text/javascript">
        generateMap();
    </script>
    <h1 id="region-name"></h1>
    {{outlet}}
</div>
